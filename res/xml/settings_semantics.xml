<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="category_special_lists"
    android:title="@string/notification_title" >

    <EditTextPreference
        android:key="semantics_condition"
        android:title="@string/settings_semantics_condition" />

    <PreferenceCategory android:title="@string/settings_semantics_actions" >
        <ListPreference
            android:key="semantics_priority"
            android:title="@string/settings_semantics_priority" />

        <Preference
            android:key="semantics_due"
            android:title="@string/settings_semantics_due" />
        
        <ListPreference
            android:key="semantics_weekday"
            android:title="@string/settings_semantics_weekday" />

        <ListPreference
            android:key="semantics_list"
            android:title="@string/settings_semantics_list" />
    </PreferenceCategory>

</PreferenceScreen>