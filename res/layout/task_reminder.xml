<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reminder_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/task_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="@dimen/task_padding_for_icons"
        android:paddingLeft="@dimen/task_padding_for_icons"
        android:paddingRight="@dimen/task_padding_for_icons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/due_reminder_text_size" />

    <ImageButton
        android:id="@+id/reccuring_reminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        tools:ignore="ContentDescription" />

</LinearLayout>